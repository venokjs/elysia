{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "NodeNext",
    "verbatimModuleSyntax": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "allowJs": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": ["dist", "node_modules"]
}
